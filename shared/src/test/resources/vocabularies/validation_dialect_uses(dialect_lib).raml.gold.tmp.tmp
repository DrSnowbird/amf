#%RAML 1.0 Dialect
uses:
  dlib: dialect_lib.raml
dialect: Validation Profile
version: 1.0
usage: Dialect to describe validations over RAML documents
nodeMappings:
  functionConstraintNode: dlib.functionConstraintNode
  propertyConstraintNode: dlib.propertyConstraintNode
  functionValidationNode: dlib.functionValidationNode
  shapeValidationNode: dlib.shapeValidationNode
  queryValidationNode: dlib.queryValidationNode
  profileNode: dlib.profileNode
raml:
  document:
    encodes: profileNode
  module:
    declares:
      validations: queryValidationNode
  fragments:
    encodes:
      Validation: queryValidationNode
