#%RAML 1.0
title: My API With Types
types:
  Person:
    properties:
      name:
        type: string
    type: object
  EmailOwner:
    properties:
      age:
        type: integer
    type: object
  Employee:
    type:
      - Person
      - EmailOwner
    properties:
      id:
        type: string
/resource:
  get:
    responses:
      200:
        body:
          application/json:
            type: Employee
            example:
              name: juan antonio
              id: 1
              age: twelve
