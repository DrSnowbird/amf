#%RAML 1.0
title: AccuWeather API
version: v1
protocols:
  - http
baseUri: {apiDomain}.accuweather.com/
baseUriParameters:
  apiDomain?:
    enum:
      - api
      - apidev
resourceTypes:
  accessibleResource:
    uriParameters:
      period:
        displayName: period
        required: true
        enum:
          - 12hour
          - 1hour
          - 72hour
          - 240hour
          - 120hour
          - 24hour
/forecasts/{version}:
  /hourly/{period}/{locationKey}{mediaTypeExtension}:
    displayName: Hourly forecasts by location key
    type: accessibleResource
