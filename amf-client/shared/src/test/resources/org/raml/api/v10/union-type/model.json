#%RAML 1.0
title: simple object
types:
  Person:
    additionalProperties: true
    properties:
      name:
        required: true
        type: string
      email:
        type: string
        pattern: .+@.+\..+
        required: true
      age:
        type: integer
        minimum: 0
        required: true
  Robot:
    additionalProperties: true
    properties:
      name:
        required: true
        type: string
      email:
        type: string
        pattern: .+@.+\..+
        required: true
  Office:
    type: object
    additionalProperties: true
    properties:
      workers:
        required: true
        anyOf:
          -
            additionalProperties: true
            properties:
              name:
                required: true
                type: string
              email:
                type: string
                pattern: .+@.+\..+
                required: true
              age:
                type: integer
                minimum: 0
                required: true
          -
            additionalProperties: true
            properties:
              name:
                required: true
                type: string
              email:
                type: string
                pattern: .+@.+\..+
                required: true
