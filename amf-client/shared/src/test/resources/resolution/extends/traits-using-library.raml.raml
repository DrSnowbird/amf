#%RAML 1.0
title: ACME Banking HTTP API
version: "1.0"
baseUri: acme-banking.com/apis
/customers:
  displayName: Customer Resource
  /corporate:
    post:
      description: Customer data created correctly for an Organization
      body:
        type: object
        additionalProperties: true
        properties:
          address_country:
            required: true
            type: string
          address_locality:
            required: true
            type: string
          address_region:
            required: true
            type: string
          postal_code:
            required: true
            type: string
          street_address:
            required: true
            type: string
          lei:
            required: true
            type: string
          tax_id:
            required: true
            type: string
          email:
            required: true
            type: string
          telephone:
            required: true
            type: string
          name:
            required: true
            type: string
          vat_id:
            required: true
            type: string
  /commercial:
    post:
      description: Customer data created correctly for a Person
      body:
        type: object
        additionalProperties: true
        properties:
          address_country:
            required: true
            type: string
          address_locality:
            required: true
            type: string
          address_region:
            required: true
            type: string
          postal_code:
            required: true
            type: string
          street_address:
            required: true
            type: string
          lei:
            required: true
            type: string
          tax_id:
            required: true
            type: string
          email:
            required: true
            type: string
          telephone:
            required: true
            type: string
          title:
            type: string
            enum:
              - mr
              - mrs
              - ms
              - dr
            required: false
          given_name:
            required: true
            type: string
          family_name:
            required: true
            type: string
          gender:
            type: string
            enum:
              - female
              - male
            required: true
          vat_id:
            required: false
            type: string
          birth_date:
            required: true
            type: date-only
  /{customer_id}:
    uriParameters:
      customer_id:
        type: string
    get:
      description: Returns Customer data
      responses:
        200:
          body:
            application/json:
              anyOf:
                -
                  type: object
                  discriminator: type
                  discriminatorValue: Organization
                  additionalProperties: true
                  properties:
                    type:
                      required: true
                      type: string
                    lei:
                      required: true
                      type: string
                    tax_id:
                      required: true
                      type: string
                    email:
                      required: true
                      type: string
                    address:
                      required: true
                      additionalProperties: true
                      properties:
                        address_country:
                          required: true
                          type: string
                        address_locality:
                          required: true
                          type: string
                        address_region:
                          required: true
                          type: string
                        postal_code:
                          required: true
                          type: string
                        street_address:
                          required: true
                          type: string
                    id:
                      required: true
                      type: string
                    name:
                      required: true
                      type: string
                    vat_id:
                      required: true
                      type: string
                -
                  type: object
                  discriminator: type
                  discriminatorValue: Person
                  additionalProperties: true
                  properties:
                    type:
                      required: true
                      type: string
                    lei:
                      required: true
                      type: string
                    tax_id:
                      required: true
                      type: string
                    email:
                      required: true
                      type: string
                    address:
                      properties:
                        address_country:
                          required: true
                          type: string
                        address_locality:
                          required: true
                          type: string
                        address_region:
                          required: true
                          type: string
                        postal_code:
                          required: true
                          type: string
                        street_address:
                          required: true
                          type: string
                      required: true
                      additionalProperties: true
                    id:
                      required: true
                      type: string
                    title:
                      type: string
                      enum:
                        - mr
                        - mrs
                        - ms
                        - dr
                      required: false
                    given_name:
                      required: true
                      type: string
                    family_name:
                      required: true
                      type: string
                    gender:
                      type: string
                      enum:
                        - female
                        - male
                      required: true
                    vat_id:
                      required: false
                      type: string
                    birth_date:
                      required: true
                      type: date-only
                    death_date:
                      required: false
                      type: date-only
    patch:
      description: Updates Customer data
      responses:
        200:
          body:
            application/json:
              type: object
              additionalProperties: true
              properties:
                lei:
                  required: false
                  type: string
                tax_id:
                  required: false
                  type: string
                email:
                  required: false
                  type: string
                title:
                  type: string
                  enum:
                    - mr
                    - mrs
                    - ms
                    - dr
                  required: false
                name:
                  required: false
                  type: string
                family_name:
                  required: false
                  type: string
                gender:
                  type: string
                  enum:
                    - female
                    - male
                  required: false
                vat_id:
                  required: false
                  type: string
                birth_date:
                  required: false
                  type: date-only
                death_date:
                  required: false
                  type: date-only
                address_country:
                  required: false
                  type: string
                address_locality:
                  required: false
                  type: string
                address_region:
                  required: false
                  type: string
                postal_code:
                  required: false
                  type: string
                street_address:
                  required: false
                  type: string
    delete:
      description: Removes a Customer from the system
    /accounts:
      get:
        queryParameters:
          limit?:
            description: The `limit` parameter restricts the number of entries returned.
            type: integer
            minimum: 1
            default: 50
          page?:
            description: The `page` parameter specifies the page of results to return.
            type: integer
            minimum: 1
            default: 1
          offset?:
            description: The `offset` parameter specifies the first entry to return from a collection.
            type: integer
            minimum: 0
            default: 10
          sort?:
            example: name,-age
            type: string
        description: Returns a collection accounts
        responses:
          200:
            body:
              application/json:
                items:
                  additionalProperties: true
                  properties:
                    id:
                      required: true
                      type: string
                    account_number:
                      required: true
                      type: string
                    accountType:
                      type: string
                      enum:
                        - standard
                        - saver
                      required: true
                    amount:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                    lei:
                      required: true
                      type: string
                    fees_and_comissions:
                      required: true
                      type: string
                    review_state:
                      type: string
                      enum:
                        - requested
                        - cancelled
                        - opened
                        - closed
                      required: true
                    interest_rate:
                      required: true
                      type: number
                    annual_interest_rate:
                      required: true
                      type: number
                    minimum_inflow:
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                      required: true
                      additionalProperties: true
                    overdraft_limit:
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                      required: true
                      additionalProperties: true
      post:
        description: Requests the creation of a new BankAccount
        body:
          application/json:
            type: object
            additionalProperties: true
            properties:
              accountType:
                type: string
                enum:
                  - standard
                  - saver
                required: true
      /{account_id}:
        uriParameters:
          account_id:
            type: string
        get:
          description: Returns BankAccount data
          responses:
            200:
              body:
                application/json:
                  type: object
                  additionalProperties: true
                  properties:
                    id:
                      required: true
                      type: string
                    account_number:
                      required: true
                      type: string
                    accountType:
                      type: string
                      enum:
                        - standard
                        - saver
                      required: true
                    amount:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                    lei:
                      required: true
                      type: string
                    fees_and_comissions:
                      required: true
                      type: string
                    review_state:
                      type: string
                      enum:
                        - requested
                        - cancelled
                        - opened
                        - closed
                      required: true
                    interest_rate:
                      required: true
                      type: number
                    annual_interest_rate:
                      required: true
                      type: number
                    minimum_inflow:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                    overdraft_limit:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
        delete:
          description: Removes a BankAccount from the system
    /loans:
      get:
        queryParameters:
          limit?:
            description: The `limit` parameter restricts the number of entries returned.
            type: integer
            minimum: 1
            default: 50
          page?:
            description: The `page` parameter specifies the page of results to return.
            type: integer
            minimum: 1
            default: 1
          offset?:
            description: The `offset` parameter specifies the first entry to return from a collection.
            type: integer
            minimum: 0
            default: 10
          sort?:
            example: name,-age
            type: string
        description: Returns a collection accounts
        responses:
          200:
            body:
              application/json:
                items:
                  additionalProperties: true
                  properties:
                    id:
                      required: true
                      type: string
                    account_number:
                      required: true
                      type: string
                    accountType:
                      type: string
                      enum:
                        - standard
                        - saver
                      required: true
                    amount:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                    lei:
                      required: true
                      type: string
                    fees_and_comissions:
                      required: true
                      type: string
                    review_state:
                      type: string
                      enum:
                        - requested
                        - cancelled
                        - underwriting
                        - accepted
                        - opened
                        - failed
                        - closed
                      required: true
                    interest_rate:
                      required: true
                      type: number
                    annual_interest_rate:
                      required: true
                      type: number
                    minimum_inflow:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                    overdraft_limit:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: number
                        currency:
                          required: true
                          type: string
                    grace_period:
                      required: true
                      additionalProperties: true
                      properties:
                        value:
                          required: true
                          type: string
      post:
        description: Requests the creation of a new Loan
        body:
          application/json:
            type: object
            additionalProperties: true
            properties:
              category:
                required: true
                type: string
              amount:
                required: true
                additionalProperties: true
                properties:
                  value:
                    required: true
                    type: number
                  currency:
                    required: true
                    type: string
              term:
                required: true
                additionalProperties: true
                properties:
                  value:
                    required: true
                    type: string
              interest_rate:
                required: true
                type: number
              down_payment:
                required: true
                additionalProperties: true
                properties:
                  value:
                    required: true
                    type: number
                  currency:
                    required: true
                    type: string
              payment_amount:
                required: true
                additionalProperties: true
                properties:
                  value:
                    required: true
                    type: number
                  currency:
                    required: true
                    type: string
              payment_frequency:
                required: true
                type: number
              review_state:
                type: string
                enum:
                  - requested
                  - underwriting
                  - rejected
                  - accepted
                  - repaying
                  - failed
                  - closed
                required: true
