#%RAML 1.0
title: Dropbox API
version: 1
baseUri: https://api.dropbox.com/{version}
securitySchemes:
    invalid:
        description: Dropbox supports OAuth 2.0 for authenticating all API requests.
        type: OAuth 2.0
        settings:
          authorizationUri: https://www.dropbox.com/1/oauth2/authorize
          accessTokenUri: https://api.dropbox.com/1/oauth2/token
          authorizationGrants: [ authorization_code, token, 'urn:ietf:params:oauth:grant-type:saml2-bearer' ]
    valid:
        description: Dropbox supports OAuth 2.0 for authenticating all API requests.
        type: OAuth 2.0
        settings:
          authorizationUri: https://www.dropbox.com/1/oauth2/authorize
          accessTokenUri: https://api.dropbox.com/1/oauth2/token
          authorizationGrants: [ authorization_code, implicit, client_credentials, password, 'urn:ietf:params:oauth:grant-type:saml2-bearer' ]
/users:
  get:
    securedBy: [invalid, valid, null]