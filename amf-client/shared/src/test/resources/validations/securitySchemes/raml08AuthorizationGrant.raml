#%RAML 0.8
title: Dropbox API
version: 1
baseUri: https://api.dropbox.com/{version}
securitySchemes:
    - invalid:
        description: Dropbox supports OAuth 2.0 for authenticating all API requests.
        type: OAuth 2.0
        settings:
          authorizationUri: https://www.dropbox.com/1/oauth2/authorize
          accessTokenUri: https://api.dropbox.com/1/oauth2/token
          authorizationGrants: [ code, token, password ]
    - valid:
        description: Dropbox supports OAuth 2.0 for authenticating all API requests.
        type: OAuth 2.0
        settings:
          authorizationUri: https://www.dropbox.com/1/oauth2/authorize
          accessTokenUri: https://api.dropbox.com/1/oauth2/token
          authorizationGrants: [ code, token, owner ]
/users:
  get:
    securedBy: [invalid, valid, null]