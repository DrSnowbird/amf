{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "A client. Most likely some company.",
    "required": [
        "id",
        "name"
    ],
    "allOf": [
        {
            "$ref": "identifier"
        }
    ],
    "properties": {
        "id": {
            "description": "Unique identifier for this client. Generated by the OKAA app.",
            "type": "integer",
            "minimum": 0
        },
        "name": {
            "description": "The name of this client. Does not have to be unique. But must be specified.",
            "type": "string"
        },
        "contactPersons": {
            "description": "Set of contact persons for this client.",
            "type": "array",
            "additionalItems": {
                "oneOf": [
                    {
                        "$ref": "identifier"
                    },
                    {
                        "$ref": "person"
                    }
                ]
            }
        },
        "dossiers": {
            "description": "Set of dossiers this client has.",
            "type": "array",
            "additionalItems": {
                "oneOf": [
                    {
                        "$ref": "identifier"
                    },
                    {
                        "$ref": "dossier"
                    }
                ]
            }
        }
    }
}
