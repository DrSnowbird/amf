		},
		"officialName2": {
			"description": "Official Name 2",
			"type": "string"
		},
		"officialName3": {
			"description": "Official Name 3",
			"type": "string"
		},
		"coName": {
			"description": "CO Name",
			"type": "string"
		},
		"vatNumber": {
			"description": "VAT Number",
			"type": "string"
