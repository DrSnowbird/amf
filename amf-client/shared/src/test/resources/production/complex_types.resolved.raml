/person:
  displayName: Person
  /{id}:
    displayName: Person ID
    uriParameters:
      id:
        type: number
        example: 4.3
        description: Represents the person unique id
    get:
      description: Get person by ID
      queryParameters:
        names:
          type: array
      responses:
        400:
          body:
            application/json:
              type: object
              example:
                message: Bad message
              additionalProperties: true
              properties:
